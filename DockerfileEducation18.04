FROM tunstall/build_env_ubuntu_18.04:latest

# apt
RUN apt-get update -y

# build-essential and other build/make package
RUN DEBIAN_FRONTEND=noninteractive apt-get install -y \
	iproute2 traceroute inetutils-ping dnsutils

# nice to have extras
RUN DEBIAN_FRONTEND=noninteractive apt-get install -y \
	openjdk-11-jdk

USER docker

ENV EXPORT_DIR /export
VOLUME ["$EXPORT_DIR"]
WORKDIR $EXPORT_DIR

#ENTRYPOINT ["tail", "-f", "/dev/null"]

